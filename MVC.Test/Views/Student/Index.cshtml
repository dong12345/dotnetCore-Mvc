@model IEnumerable<MVC.Test.Models.StudentViewModel>
@{
    Layout = "MyLayout";
}



<div>
    <a class="nav-link text-dark" asp-action="addStudent">添加学生</a>
    <cache expires-after="@TimeSpan.FromSeconds(5)">@DateTime.Now</cache>
</div>

<div>
    @Html.AntiForgeryToken()
    <table id="demo" lay-filter="test"></table>
</div>

<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
<script>
    layui.use(['table', 'jquery'], function () {
        var table = layui.table, $ = layui.jquery;
        //第一个实例
        table.render({
            elem: '#demo'
            , url: '/student/GetAllStudent' //数据接口
            , page: false //开启分页
            , cols: [[ //表头
                { field: 'id', title: 'ID', sort: true, fixed: 'left' }
                , { field: 'name', title: '学生姓名' }
                , { field: 'age', title: '年龄', sort: true }
                , { field: 'teacherName', title: '教师' }
                , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 150 }
            ]]
        });

        //监听行工具事件
        table.on('tool(test)', function (obj) {
            var data = obj.data;
            //console.log(obj)
            if (obj.event === 'del') {
                layer.confirm('真的删除行么', function (index) {
                    layer.close(index);
                    //请求数据
                    jqPost({
                        url: '/student/delete',
                        data: { id: data.id },
                        success: function (res) {
                            if (res.isSuccess == true) {
                                layer.msg("删除成功", { icon: 1, time: 1000 }, function () {
                                    obj.del();
                                });
                            }
                        }
                    })

                });
            } else if (obj.event === 'edit') {
                var id = obj.data.id
                layer.open({
                    type: 2,
                    title: "编辑用户",
                    area: ["700px", "450px"],
                    content: '/Student/Edit/' + id,
                    end: function () {
                        //加载层-默认风格
                        layer.load();
                        //此处演示关闭
                        setTimeout(function () {
                            layer.closeAll('loading');
                        }, 500);
                    }
                });
            }
        });


    });
</script>